# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Docker files
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Requirements
requirements*.txt text eol=lf